/* index.css — Estructura básica */
:root{
  --primary: #2b6cb0;
  --muted: #666;
  --bg: #f7fafc;
}

* { box-sizing: border-box; }
body{
  margin:0;
  font-family: Arial, Helvetica, sans-serif;
  background: var(--bg);
  color: #222;
  line-height:1.4;
  padding: 16px;
}

.site-header{
  background: var(--primary);
  color: white;
  padding: 16px;
  border-radius: 8px;
}
.site-header h1{ margin: 0 0 4px 0; }
.carnet { margin:0; font-size: 0.95rem; opacity: 0.95; }

.main-nav ul{
  display:flex;
  gap:12px;
  list-style:none;
  padding: 8px 0;
  margin: 12px 0;
}
.main-nav a{ text-decoration:none; color:var(--primary); }

.content{
  display:block;
  background: white;
  padding: 16px;
  border-radius: 8px;
  box-shadow: 0 1px 3px rgba(0,0,0,.08);
}

.content > section { margin-bottom: 16px; }
