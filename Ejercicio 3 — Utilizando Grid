/* index_grid.css */
body{ font-family: Arial, Helvetica, sans-serif; margin:16px; background:#f8fafb; }
.grid{
  display:grid;
  grid-template-columns: 220px 1fr 300px;
  grid-template-rows: auto 1fr auto;
  gap:12px;
  grid-template-areas:
    "header header header"
    "menu content sidebar"
    "footer footer footer";
  padding:12px;
}

.item{ padding:16px; border-radius:8px; background:white; box-shadow:0 1px 3px rgba(0,0,0,.05); }

.item1{ grid-area: header; background:#2b6cb0; color:white; }
.item2{ grid-area: menu; }
.item3{ grid-area: content; }
.item4{ grid-area: sidebar; }
.item5{ grid-area: footer; background:#f1f5f9; text-align:center; }

@media (max-width:900px){
  .grid{
    grid-template-columns: 1fr;
    grid-template-areas:
      "header"
      "menu"
      "content"
      "sidebar"
      "footer";
  }
}
