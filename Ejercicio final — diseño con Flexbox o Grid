*{ box-sizing:border-box; }
body{ margin:0; font-family:Inter, Arial, Helvetica, sans-serif; background:var(--bg); color:#111; padding:20px; }

.site{ max-width:1200px; margin:0 auto; display:grid; gap:16px; grid-template-columns: 1fr 320px; grid-template-rows: auto 1fr auto; grid-template-areas:
  "header header"
  "main aside"
  "footer footer";
}

.site-header{ grid-area: header; background:var(--accent); color:white; padding:20px; border-radius:8px; }
.site-nav{ display:flex; gap:12px; padding:8px 0 0 0; }
.site-nav a{ color:white; text-decoration:none; opacity:.95; }

.site-main{ grid-area: main; background:var(--card); padding:18px; border-radius:8px; box-shadow:0 1px 6px rgba(0,0,0,.06); }
.site-aside{ grid-area: aside; background:var(--card); padding:18px; border-radius:8px; height:fit-content; }
.site-footer{ grid-area: footer; text-align:center; color:var(--muted); padding:12px; }

.hero{ margin-bottom:12px; }
.cards{ display:grid; grid-template-columns: repeat(3,1fr); gap:12px; }
.card{ padding:12px; border-radius:8px; background:#fff; box-shadow:0 1px 3px rgba(0,0,0,.04); }

